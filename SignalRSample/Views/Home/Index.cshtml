<div class="container">
    <div class="row mt-2">
        <div class="col-2">Total Views: </div>
        <div class="col-4">
            <span id="totalViewsCounter"></span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-2">Total Connection/Users: </div>
        <div class="col-4">
            <span id="totalUsersCounter"></span>
        </div>
    </div>
    <hr/>
    <div class="row">&nbsp;</div>
    <div class="text-center">
        <div class="row mt-1">
            <div class="col-2">Sender</div>
            <div class="col-4"><input type="text" class="form-control" value="@User?.Identity?.Name" id="senderEmail" /></div>
        </div>
        <div class="row mt-1">
            <div class="col-2">Receiver</div>
            <div class="col-4"><input type="text" class="form-control" id="receiverEmail" /></div>
        </div>
        <div class="row mt-1">
            <div class="col-2">Message</div>
            <div class="col-4"><input type="text" class="form-control" id="chatMessage" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row mt-1">
            <div class="col-2"></div>
            <div class="d-flex col-4 justify-content-end">
                <button type="button" id="sendMessage" class="btn btn-primary">Send Message</button>
            </div>
            <div class="col-6"></div>
        </div>
        <div class="row mt-1 w-100">
            <div class="col-12">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>    
</div>

